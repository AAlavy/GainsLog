<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.MainPage"
             BackgroundColor="White"
             >
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button 
            x:Name="workoutStartButton"
            Text="Start Workout" 
            Grid.Row="1" 
            Grid.Column="0"
            Clicked="onStartWorkout"
            />

        <Button
            x:Name="programsButton"
            Text="Programs"
            Grid.Row="2" 
            Grid.Column="0"
            Clicked="onProgramsPage"
            />
        <Button
            x:Name="historyButton"
            Text="History"
            Grid.Row="3"
            Grid.Column="0"
            />

    </VerticalStackLayout>

</ContentPage>
