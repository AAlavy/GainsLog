<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.ProgramsPage"
             Title="ProgramsPage"
             BackgroundColor="White"
             >
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button 
            x:Name="createProgramButton"
            Text="Create New Program" 
            Grid.Row="1" 
            Grid.Column="0"
            Clicked="onCreateProgram"
            />

        <Button
            Text="Programs"
            Grid.Row="2" 
            Grid.Column="0"
            Clicked="onPrograms"
            />

    </VerticalStackLayout>
</ContentPage>