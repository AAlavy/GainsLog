<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.WorkoutPage"
             Title="WorkoutPage"
             BackgroundColor="White"
             >
    <VerticalStackLayout x:Name="WorkoutView">
        <Label
            x:Name="workoutTimerDisplay"
            Text="00:00:00"
            Grid.Row="0" 
            Grid.Column="0"
            TextColor="Black"
            />

        <Label
            x:Name="restTimerLabel"
            Grid.Row="1" 
            Grid.Column="0"
            TextColor="Black"
            />

        <Label
            x:Name="setLabel"
            Grid.Row="2" 
            Grid.Column="0"
            TextColor="Black"
            />        
        
        <Label
            x:Name="nextLabel"
            Grid.Row="3" 
            Grid.Column="0"
            TextColor="Black"
            />
        
        <ImageButton
            x:Name="stopWorkoutButton"
            Grid.Row="3"
            Grid.Column="0"
            Clicked="StopWorkout"
            Source="stop_icon.png"
            BackgroundColor="Transparent"
            BorderColor="Transparent"
            BorderWidth="0" 
            CornerRadius="0" 
            Padding="0" 
            HeightRequest="30"
            WidthRequest="30"
            />




    </VerticalStackLayout>
</ContentPage>