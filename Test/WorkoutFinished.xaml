<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.WorkoutFinished"
             Title="WorkoutFinished"
             BackgroundColor="White"
             >
    <VerticalStackLayout x:Name="WorkoutFinishedView">

        <Label
            Text="Good job!"
            TextColor="Black"
            />

        <Entry
            x:Name="Notes"
            Placeholder="Thoughts about the workout?"
            TextChanged="HandleNotesChanged"
            />

        <Button
            Text="Close"
            Clicked="CloseButton"
            />

    </VerticalStackLayout>
</ContentPage>