<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Test.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Test"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab
            Title="Start Workout"
            >
            <ShellContent ContentTemplate="{DataTemplate local:WorkoutDayPicker}"/>
        </Tab>
        <Tab
            Title="Programs"
            >
            <ShellContent ContentTemplate="{DataTemplate local:ProgramsPage}"/>
        </Tab>
        <Tab
            Title="Logs"
            >
            <ShellContent ContentTemplate="{DataTemplate local:LogPage}"/>
        </Tab>
    </TabBar>

</Shell>
